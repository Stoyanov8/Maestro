@model IEnumerable<UserListOutputModel>

<h2>Users</h2>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Email</th>
            <th scope="col">Name</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Role</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Email</td>
                <td>@m.FirstName @m.LastName</td>
                <td>@m.PhoneNumber</td>
                <td>@m.RolesConcatenated</td>
                <td>
                    <a type="button" class="btn btn-primary" asp-action="PromoteToEmployee" asp-controller="Users" asp-route-userId="@m.Id"><i class="far fa-eye"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

