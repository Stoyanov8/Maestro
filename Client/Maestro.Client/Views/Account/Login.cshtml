@model UserBaseInputModel

<form asp-action="Login" asp-controller="Account">
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" type="email" class="form-control col-6" aria-describedby="emailHelp" placeholder="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Password</label>
        <input asp-for="Password" type="password" class="form-control col-6" placeholder="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>